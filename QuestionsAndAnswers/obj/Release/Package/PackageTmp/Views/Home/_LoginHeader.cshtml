@if (!Request.IsAuthenticated)
{
    <li id="loginurl">@Html.ActionLink(Resources.Global.Login, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
<li class="dropdown">
    @if (Request.IsAuthenticated)
    {
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name<b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li class="nav-header">@Resources.Global.UserMenu</li>
            <li>@Html.ActionLink(Resources.Global.MyProfile, "GetUser", "Home", new { id = WebSecurity.CurrentUserId }, null)</li>
            <li>@Html.ActionLink(Resources.Global.EditMyProfile, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })</li>
            <li>@Html.ActionLink(Resources.Global.ChangeEmail, "EmailRegister","Home")</li>
            <li>@Html.ActionLink(Resources.Global.Logout, "Logoff", "Account")</li>
        </ul>
    }
</li>
