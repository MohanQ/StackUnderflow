@model QuestionsAndAnswers.Models.Question

@{
    ViewBag.Title = Resources.Global.EditQuestion;
}

<h2>@Resources.Global.EditQuestion</h2>

@using (Html.BeginForm("EditQuestion", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resources.Global.question</legend>

        <input type="hidden" name="QuesID" value="@Model.Id" />

        <label>@Resources.Global.Title</label>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <label>@Resources.Global.Content</label>
        <div class="hidden">
            @Html.TextAreaFor(model => model.Content)

        </div>
        <textarea id="edit_editor"></textarea>
        <br />
        @Html.ValidationMessageFor(model => model.Content)

        <p>
            <input type="submit" id="form_submit" value="@Resources.Global.Save" class="btn" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Resources.Global.BackToHomePage, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/editquestion.js")
}