@model QuestionsAndAnswers.Models.UserProfile

@{
    ViewBag.Title = Resources.Global.EmailSetting;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Global.EmailSetting</h2>

@using (Html.BeginForm("EmailRegister", "Home", FormMethod.Post)) {

    <fieldset>
        <legend>Email</legend>

        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <p>
            <input type="submit" class="btn" value="@Resources.Global.Save" />
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
