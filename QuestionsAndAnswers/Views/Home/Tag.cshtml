@model List<QuestionsAndAnswers.Models.Question>

@{
    ViewBag.Title = ViewBag.Tag.Name;
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

@using PagedList;
@using PagedList.Mvc;

<h2>@string.Format(Resources.Global.TagsHeadline, ViewBag.Tag.Name)</h2>

@{Html.RenderAction("GetQuestionsByTag", "Home", new { page = ViewBag.Page, questions = ViewBag.OnePageOfProducts });}

@if (ViewBag.MorePage != 0)
{
    <div class="row">
        <div class="span8">
            @Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("Tag", new { id = ViewBag.Tag.Id, page = page }), new PagedListRenderOptions {Display = PagedListDisplayMode.IfNeeded,  LinkToFirstPageFormat = "<< " + Resources.Global.First, LinkToPreviousPageFormat = "< " + Resources.Global.Previous, LinkToNextPageFormat = Resources.Global.Next + " >", LinkToLastPageFormat = Resources.Global.Latest + " >>" })&nbsp;
        </div>
    </div>
}
