@model List<QuestionsAndAnswers.Models.Tag>
<div class="well sidebar-nav">
    <ul class="nav nav-list">
        <li class="nav-header">@Resources.Global.Tags</li>
        @foreach (var item in Model)
        {
            <li>@Html.ActionLink(item.Name, "Tag", "Home", new { id = item.Id, info = System.Text.RegularExpressions.Regex.Replace(item.Name.Replace(" ", "-"), "[^\\p{L}0-9_-]", "") }, null)</li>
        }

        <li class="nav-header">@Resources.Global.Subscribe <span id="help" class="label label-info">&nbsp;?&nbsp;</span></li>
        <li><input class="input-small" type="text" id="tags-input" value="" placeholder="@Resources.Global.Tags"/></li>
        <li><input class="btn btn-info" type="button" id="subcribes" value="@Resources.Global.Subscribe" /> </li>
    </ul>
</div>

<!-- If the subcribe is success -->
<!--This is a hidden link for Jquery Modal -->
<a href="#" class="hidden" data-reveal-id="myModal" id="mylink">Click Me For A Modal</a>
<!--This is a modal's content -->
<div id="myModal" class="reveal-modal">
    <h3>@Resources.Global.SubscribedSuccess</h3>
    <h4>@Resources.Global.ThisSubscribeTags</h4>
    <div id="sub_tag"></div>
    <a class="close-reveal-modal">&#215;</a>
</div>

<!-- If the subcribe isn't success -->
<!--This is a hidden link for Jquery Modal -->
<a href="#" class="hidden" data-reveal-id="errorModal" id="errorlink">Click Me For A Modal</a>
<!--This is a modal's content -->
<div id="errorModal" class="reveal-modal">
    <h3>@Resources.Global.ErrorInSubscribe</h3>
    <br />
    <h4 style="color: #0266C8">@Resources.Global.CheckSubscribe</h4>
    <a class="close-reveal-modal">&#215;</a>
</div>
<!-- If the user haven't email -->
<a href="#" class="hidden" data-reveal-id="emailModal" id="emaillink">Click Me For A Modal</a>
<div id="emailModal" class="reveal-modal">
    <h4>@Resources.Global.NoEmail</h4>
    <a href="/Home/EmailRegister">@Resources.Global.EmailReg</a>
    <a class="close-reveal-modal">&#215;</a>
</div>
<!-- If the user have email, but email isn't verify -->
<a href="#" class="hidden" data-reveal-id="verifyModal" id="verifylink">Click Me For A Modal</a>
<div id="verifyModal" class="reveal-modal">
    <h4>@Resources.Global.YouMustVerifyEmail</h4>
    <a class="close-reveal-modal">&#215;</a>
</div>
<input type="hidden" value="@ViewBag.Email" id="emailinfo" />
<input type="hidden" value="@ViewBag.isAuth" id="isauth" />
<input type="hidden" value="@ViewBag.isVerify" id="isverify" />
<!--Hidden for TipTip's content -->
<input type="hidden" value="@Resources.Global.BubbleForTagsSubscribe" id="tiptip_content" />



