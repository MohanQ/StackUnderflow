@model QuestionsAndAnswers.Models.Answer

@{
    ViewBag.Title = Resources.Global.EditAnswer;
}


<h2>@Resources.Global.EditAnswer</h2>

@using (Html.BeginForm("EditAnswer", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resources.Global.Answer</legend>

        <input type="hidden" name="AnsId" value="@Model.Id" />

        <label>@Resources.Global.Content</label>
        <div class="hidden">
            @Html.TextAreaFor(model => model.Content)

        </div>
        <textarea id="edit_editor"></textarea>
        <br />
        @Html.ValidationMessageFor(model => model.Content)

        <p>
            <input type="submit" id="form_submit" value="@Resources.Global.Save" class="btn" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(@Resources.Global.BackToHomePage, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/scripts/editanswer.js")
}
