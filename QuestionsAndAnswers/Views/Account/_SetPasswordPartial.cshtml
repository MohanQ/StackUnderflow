@model QuestionsAndAnswers.Models.LocalPasswordModel

<p>
    Nincs helyi fiókod az oldalon, ha megadsz egy helyi jelszót, akkor itteni fiókkal is be tudsz jelentkezni.
</p>

@using (Html.BeginForm("Manage", "Account")) {
    //@Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Jelszó megadási űrlap</legend>
        <ol>
            <li>
                @Html.Label(Resources.Global.NewPassword)
                @Html.PasswordFor(m => m.NewPassword)
            </li>
            <li>
                @Html.Label(Resources.Global.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" class="btn btn-info" value="Jelszó megadása" />
    </fieldset>
}
