@model QuestionsAndAnswers.Models.RegisterModel
@{
    ViewBag.Title = Resources.Global.Register;
}

<hgroup class="title">
    <h1>@Resources.Global.Register</h1>
    <h2>@Resources.Global.CreateNewProfile</h2>
</hgroup>

@using (Html.BeginForm()) {
    //@Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>@Resources.Global.RegisterForm</legend>
        <ol>
            <li>
                @Html.Label(Resources.Global.Username)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.Label(Resources.Global.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.Label(Resources.Global.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" class="btn" value=@Resources.Global.Register />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
